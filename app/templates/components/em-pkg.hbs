<td class="cell-name">
  {{#if hideInstallCommand}}
    <a href="https://www.npmjs.com/{{pkg.name}}"
       target="_blank"
       class="package-link">{{split-prefix pkg.name}}</a>
    {{#if isNew}}
      <div class="new-package">NEW</div>
    {{/if}}
    {{#if hasDescription}}
      <div class="description">
        {{pkg.description}}
      </div>
    {{/if}}
    {{#if pkg.demoURL}}
      <div>
        <a class="demo-link" href="{{unbound pkg.demoURL}}" target="_blank">DEMO</a>
      </div>
    {{/if}}
  {{else}}
    {{em-install-command package=pkg.name}}
  {{/if}}
</td>
<td class="cell-clipboard hidden-xs">
  <a href="#" {{action 'toggleDisplayInstallCommand'}} class="cell-clipboard-link">
    {{em-icon-clipboard color=(if hideInstallCommand '#7f7f7f' '#ea3723')}}
  </a>
</td>
<td class="cell-gravatar hidden-xs">
  <a href="https://www.npmjs.com/~{{user.name}}" target="_blank">
    <img src="{{user.gravatar}}?s=30&d=retro" class="gravatar">
    {{user.name}}
  </a>
</td>
<td class="cell-downloads hidden-xs">
  {{observer-score
    score=pkg.emberObserver.score
    isWIP=pkg.emberObserver.isWIP
    note=pkg.emberObserver.note
    name=pkg.name}}
</td>
<td class="cell-updated hidden-xs">
  {{ago pkg.time.modified}}
</td>
