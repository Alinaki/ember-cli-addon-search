<div class="search-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        {{input type="search"
        value=query
        placeholder="Filter addons"
        class="form-control search-field"
        autofocus="autofocus"
        key-press="resetPage"}}
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <table class="table table-packages">
        <thead>
          <tr>
            <th>
              <a href="#" {{action "sortBy" "name"}} class="sort-button">
                NAME
              </a>
            </th>
            <th class="hidden-xs">
              <a href="#" {{action "sortBy" "_npmUser.name"}} class="sort-button">
                OWNER
              </a>
            </th>
            <th class="hidden-xs">
              <a href="#" {{action "sortBy" "emberObserver.score"}} class="sort-button" title="Ember Observer score">
                SCORE
              </a>
            </th>
            <th class="hidden-xs">
              <a href="#" {{action "sortBy" "time.modified"}} class="sort-button">
                UPDATED
              </a>
            </th>
          </tr>
        </thead>
        <tbody>
          {{#each currentPageContent as |pkg|}}
            {{em-pkg pkg=pkg}}
          {{else}}
            <td colspan="4">
              <p class="not-found">Nothing found for "{{query}}"</p>
            </td>
          {{/each}}
          <tr class="pagination-row">
            <td colspan="4" class="pagination-cell">
              <a class="btn pagination-link {{if hasPreviousPage 'enabled' 'disabled'}}" {{action 'previousPage'}}>Previous</a>

              <a class="btn pagination-link {{if hasNextPage 'enabled' 'disabled'}}" {{action 'nextPage'}}>Next</a>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
