<div class="search-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        {{input type="search"
        value=query
        placeholder="Filter addons"
        class="form-control search-field"
        autofocus="autofocus"
        key-press="resetPage"}}
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <table class="table table-packages">
        <thead>
          {{partial "-table-header"}}
        </thead>
        <tbody>
          {{#each currentPageContent key="@guid" as |pkg|}}
            {{em-pkg pkg=pkg}}
          {{else}}
            <td colspan="6">
              <p class="not-found">Nothing found for "{{query}}"</p>
            </td>
          {{/each}}

          {{em-pagination
            list=sortedPackages
            page=page
            limit=limit
            previous="previousPage"
            next="nextPage"}}

        </tbody>
      </table>
    </div>
  </div>
</div>
