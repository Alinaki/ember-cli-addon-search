<div class="search-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        {{input type="search"
        value=query
        placeholder="Filter addons"
        class="form-control search-field"
        autofocus="autofocus"
        key-press="resetPage"}}
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <table class="table table-packages">
        <thead>
          <tr>
            <th {{action 'sortBy' 'name'}}>
              NAME
            </th>
            <th {{action 'sortBy' '_npmUser.name'}}>
              OWNER
            </th>
            <th {{action 'sortBy' 'downloads.downloads'}}>
              DOWNLOADS
            </th>
            <th {{action 'sortBy' 'time.modified'}}>
              UPDATED
            </th>
          </tr>
        </thead>
        <tbody>
          {{#each currentPageContent as |pkg|}}
            {{em-pkg pkg=pkg}}
          {{else}}
            <td colspan="4">
              <p class="not-found">Nothing found for "{{query}}"</p>
            </td>
          {{/each}}
          <tr class="pagination-row">
            <td colspan="4" class="pagination-cell">
              <button
                {{bind-attr class=":pagination-link hasPreviousPage:enabled:disabled"
                disabled="previousDisabled"}}
                {{action 'previousPage'}}>Previous</button>

              <button
                {{bind-attr class=":pagination-link hasNextPage:enabled:disabled"
                disabled="nextDisabled"}}
                {{action 'nextPage'}}>Next</button>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
