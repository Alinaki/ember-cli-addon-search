{{em-header
  packageCount=packageCount
  query=query}}

<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <table class="table table-packages">
        <thead>
          {{partial "-table-header"}}
        </thead>
        <tbody>
          {{#each currentPageContent key="@guid" as |pkg|}}
            {{em-pkg pkg=pkg}}
          {{else}}
            <td colspan="6">
              <p class="not-found">Nothing found for "{{query}}"</p>
            </td>
          {{/each}}

          {{em-pagination
            list=sortedPackages
            page=page
            limit=limit
            previous="previousPage"
            next="nextPage"}}

        </tbody>
      </table>
    </div>
  </div>
</div>
